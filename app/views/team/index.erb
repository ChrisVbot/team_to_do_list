
<!-- Show the team name -->
<% if current_user %>
<div class="container">
<div class="row">
  <div class ="col-md-4">
      <h1><%= @team.name %></h1>
  </div>
  </div>
</div>
<% end %>


<!-- List the team members' names -->
<div class="container">
  <div class="row">
    <% @team.users.each do |name| %>
    <div class="col-md-1">
      <h4 style="display:inline-block;"><%= name.username %></h4>
    </div>
    <% end %>
  </div>
</div>


<!-- Add a new team member -->
<div class="container">
  <div class="row">
    <form method="POST" action="/team/<%= @team.id %>/new_member">
      <div>
        <label>Add a new member to <%= @team.name %>: </label>
        <input type="text" class="form-group" name="username">
        <input type="hidden" name="team_id" value="<%=@team.id%>">
      </div>
    </form>
  </div>
</div>


<!-- Create a new list -->
<div class="container">
  <div class="row">
    <form method="POST" action="/team/<%= @team.id %>/new_list">
      <div>
        <label>Enter a title to create a new list: </label>
        <input type="text" class="form-group" name="title">
        <input type="hidden" name="user_id" value="<%=current_user.id%>">
      </div>
    </form>
  </div>
</div>


<!-- List all of the todo lists -->
<div class="container">
  <% if current_user %>

  <% @team.lists.each do |list| %>
  <div class="col-md-4">
    <div class="list">
      <strong><%= list.title %></strong>
      <br>
      <small>(posted by: <%= list.user.username %>)</small>
      <br><br>

      <% list.tasks.each do |task| %>

      <ul style="list-style:none;padding: 0 0 0 0">
        <li style="padding:none;">
          <%= task.content %>
          <% unless task.user == nil %>
          <small>(added by: <%= task.user.username %>)</small>
          <% end %>
        </li>

        <% unless task.complete %>
        <form method="POST" action="/team/<%= task.id %>/check">
          <input type="submit" value="Task Complete">
        </form>
        <% end %>

        <form method="POST" action="/team/<%= task.id %>/delete">
          <input type="hidden" name="_method" value="DELETE">
          <input type="submit" value="Delete Task">
        </form>

      </ul> 
      <% end %>
      <div id="new_task">
        <form method="POST" action="/team/<%= list.id %>/new">
          <label>New task: </label>
          <br>
          <input type="text" class="form-group" name="content">
          <input type="hidden" name="user_id" value="<%=current_user.id%>">
        </form>
      </div>

      <div id ="complete">
        <form method="POST" action="/team/<%= list.id %>/complete">
          <input type="submit" value="List Complete">
        </form>
      </div>

      <div id="delete">
        <form method="POST" action="/team/<%= list.id %>">
          <input type="hidden" name="_method" value="DELETE">
          <input type="hidden" name="team_id" value="<%= @team.id%>">
          <input type="submit" value="Delete List">
        </form>
      </div>

    </div>
  </div>
  <% end %>
  <% end %>
</div>