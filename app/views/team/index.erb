<div class="container">
  <div class="row">

    <% if current_user %>
    <div class ="col-md-3">
      <h1><%= @team.name %></h1>
    </div>
    <% end %>

    <% @team.users.each do |name| %>
    <div class="col-md-1" style="margin-top:20px">
      <h4><%= name.username %></h4>
    </div>
    <% end %>

  </div>
</div>


<div class="container">
  <div class="row">
    <div class="col-md-6" style="margin: 10px 0 10px 0">

      <form method="POST" action="/team/<%= @team.id %>/new_member">
        <div>
          <label>Add a new member to <%= @team.name %>: </label>
          <input type="text" class="form-group" name="username">
          <input type="hidden" name="team_id" value="<%=@team.id%>">
        </div>
      </form>

    </div>
  </div>
</div>

<div class="priority_box">
  <% completed = @team.lists.all.count('complete') %>
  <% uncompleted = @team.lists.all.count(:conditions => "complete == nil") %>
  <% if @team.lists.all.count == 0 || completed == uncompleted %>
    <h6>No active lists</h6>
  <% else %>
    <h6> <%= uncompleted - completed %> active to-do lists</h6>
  <% end %>
</div>
  








<div class="container">
  <div class="row">
    <div class="col-md-6" style="margin: 10px 0 10px 0">

      <form method="POST" action="/team/<%= @team.id %>/new_list">
        <div>
          <label>Enter new list title: </label>
          <input type="text" class="form-group" name="title">
          <input type="hidden" name="user_id" value="<%=current_user.id%>">
        </div>
      </form>

    </div>
  </div>
</div>


<div class="container" style="margin-top: 15px">

  <span clas="glyphicon glyphicon-play"></span>

  <% if current_user %>
  <% @team.lists.each do |list| %>
  <% unless list.complete %>
  <div class="col-md-4">
    <div class="list">
      <h3><%= list.title %>
        <br>
        <small>(<%= list.user.username %>)</small>
      </h3>

      <ul class="team_ul">
        <% list.tasks.order(date_priority_assigned: :desc).each do |task| %>
        <div class="task_container">
          <li class="task">
            <h4>
              <%= task.content %>
              <% unless task.user == nil %>
              <br>
              <small>(<%= task.user.username %>)</small>
            </h4>

            <% end %>

            <form method="POST" action="/team/<%= task.id %>/check">
              <div class="checkboxes">
                <% if task.complete == nil %>
                <input class="complete_checkbox" type='checkbox' name='complete' value='true' />
                <span for='complete' class="label" style="color:#777777">Incomplete</span>
                <% else %>
                <span for='complete' class="label" style="color:#777777">Complete</span>
                <% end %>

              </div>
            </form>
            
              <form method="POST" action="/team/<%= task.id %>/priority">
                <div class="checkboxes">
                  <% if task.priority == nil %>
                    <input class="priority_checkbox" type="checkbox" name='priority' value='true' />
                    <label for='priority' class="highlight">Mark as priority</label>
                  <% else %>
                    <label for='priority' class="highlight">Priority</label>
                  <% end %>
              </form>       

            <form method="POST" action="/team/<%= task.id %>/delete">
              <input type="hidden" name="_method" value="DELETE">
              <input type="submit" value="Delete Task">
            </form>
   
          </li>
        </div>
      </ul> 
      <% end %>


      <div id="new_task">
        <form method="POST" action="/team/<%= list.id %>/new">
          <label>Enter new task: </label>
          <input type="text" class="form-group" name="content">
          <input type="hidden" name="user_id" value="<%=current_user.id%>">
        </form>
      </div>

      <div id ="complete">
        <form method="POST" action="/team/<%= list.id %>/complete">
          <input type="submit" value="List Complete">
        </form>
      </div>

      <div id="delete">
        <form method="POST" action="/team/<%= list.id %>">
          <input type="hidden" name="_method" value="DELETE">
          <input type="hidden" name="team_id" value="<%= @team.id%>">
          <input type="submit" value="Delete List">
        </form>
      </div>

    </div>
  </div>

  <% end %>
  <% end %>
  <% end %>
  
</div>
