<div class="container">
  <!-- Fixed navbar  --> 
  <nav class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
      <div class="navbar-header">
        <a href="/user" class="navbar-brand"><%= @user.username %></a>
      </div>
      <div class="collapse navbar-collapse">
        <!-- Login/Logout buttons with image --> 
        <form action="/logout" method="POST" class="navbar-form navbar-right">
          <button class="btn btn-success" type="submit"></button>
        </form>

        <form action="/login" method="POST" class="navbar-form navbar-right">
          <div class="form-group">
            <input type="text" name="username" class="form-control" placeholder="Username" />
          </div>
          <div class="form-group">
            <input type="text" name="password" class="form-control" placeholder="Password" />
          </div>
          <button class="btn btn-success" type="submit">
            <span class="glyphicon glyphicon-log-in"></span> Login
          </button>
        </form>

        <div class="navbar-form navbar-right">
          <a href="/signup">
            <button class="btn btn-success" type="submit">
              <span class="glyphicon glyphicon-user"></span>Sign up
            </button>
          </a>
        </div>
      </div>
    </div>
  </nav>
</div>

<div class="container">
  <div style="height:100px;"></div>
</div>

<div class="container">
  <% Team.where(id: @user.teams).find_each do |team| %>
  <div class ="col-md-4">
    <div class="card" style="height:150px;border-radius:5px;border-style:solid;margin-top:15px;padding: 10px 0px 10px 0px">
      <h1 class="card-title" style="align:center;text-align:center;"><a href="/team/<%= team.id %>"><%= team.name %></a></h1>
    </div>
  </div>
  <% end %>
  <div class="col-md-4">
    <div class="card" style="height:100px;border-radius:5px;border-style:solid;margin-top:15px;padding: 10px 0px 10px 0px">
      <from method="post" action="/create_team" style="align:center;">
        <label>Team Name</label>
        <input type="text" class="form-group" name="name" value="<%=@team.name%>">
        <input type="hidden" name="user" value="<%= @user %>">
      </div> 
    </from>
  </div>
</div>

