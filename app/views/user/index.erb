
<div class="container">
  <div style="height:100px;"></div>
</div>

<div class="container">
  <% Team.where(id: @user.teams).find_each do |team| %>
  <div class ="col-md-4">
    <div class="card" style="height:150px;border-radius:5px;border-style:solid;margin-top:15px;padding: 10px 0px 10px 0px">
      <h1 class="card-title" style="align:center;text-align:center;"><a style="color:#5cb85c" href="/team/<%= team.id %>"><%= team.name %></a></h1>
    </div>
  </div>
  <% end %>
  <div class="col-md-4">
    <div class="card" style="height:200px;border-radius:5px;border-style:solid;margin-top:15px;padding: 10px 0px 10px 0px">
    <h1 class="card-title" style="align:center;text-align:center;color:#5cb85c">Create a team</h1>
    <h3 class="card-subtitle" style="align:center;text-align:center;color:#5cb85c">Team name:</h3>
      <form method="post" action="/create_team">
        <div align="center"><input type="text" class="form-group" name="name" value="<%=@team.name%>"></div>
        <input type="hidden" name="user" value="<%= @user %>">
      </div> 
    </form>
  </div>
</div>

