
<div class="container">
  <div style="height:100px;"></div>
</div>

<div class="container">
  <% Team.where(id: @user.teams).find_each do |team| %>
  <div class ="col-md-4">
    <a href="/team/<%= team.id %>" style="color:#5cb85c">
      <div class="card" style="height:150px;border-color:black;border-radius:8px;border-style:solid;margin-top:15px;padding: 10px 0px 10px 0px">
        <h1 class="card-title" style="align:center;text-align:center;"><%= team.name %></h1>
      </div>
    </a>
  </div>
  <% end %>
  <div class="col-md-4">
  <a href="/user/<%= @user.id %>" style="color:#5cb85c">
    <div class="card" style="height:200px;border-color:black;border-radius:8px;border-style:solid;margin-top:15px;padding: 10px 0px 10px 0px">
      <h1 class="card-title" style="align:center;text-align:center;color:#5cb85c">Create a team</h1>
      <h3 class="card-subtitle" style="align:center;text-align:center;color:#5cb85c">Team name:</h3>
      <form method="post" action="/new_team">
      <div align="center"><input type="text" class="form-group" name="name" value="<%=@team.name%>"></div>
      <input type="hidden" name="user" value="<%= @user %>"> 
      </form>
    </div>
  </a>
  </div>
</div>

